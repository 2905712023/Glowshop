<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="invoice_report" pageWidth="612" pageHeight="792"
    columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parámetros -->
    <parameter name="REPORT_TOTAL" class="java.math.BigDecimal"/>
    <parameter name="REPORT_INVOICE_ID" class="java.lang.Integer"/>
    <parameter name="REPORT_INVOICE_CUSTOMER" class="java.lang.String"/>
    <parameter name="REPORT_INVOICE_DATE" class="java.lang.String"/>

    <!-- Campos -->
    <field name="unitPrice" class="java.math.BigDecimal"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="subtotal" class="java.math.BigDecimal"/>
    <field name="productId" class="com.cosmeticsstore.sv.model.Products"/>

    <!-- Título principal -->
    <title>
        <band height="150">
            <staticText>
                <reportElement x="0" y="0" width="572" height="40"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="28" isBold="true"/>
                </textElement>
                <text><![CDATA[FACTURA]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="45" width="200" height="25"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["N°: " + $P{REPORT_INVOICE_ID}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="0" y="75" width="200" height="25"/>
                <textElement>
                    <font size="13" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Fecha: " + $P{REPORT_INVOICE_DATE}]]></textFieldExpression>
            </textField>
        </band>
    </title>


    <pageHeader>
        <band height="120">


            <line>
                <reportElement x="0" y="0" width="572" height="1"/>
            </line>

            <staticText>
                <reportElement x="0" y="10" width="200" height="20"/>
                <textElement>
                    <font isBold="true" size="12"/>
                </textElement>
                <text><![CDATA[DATOS DEL CLIENTE]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="35" width="200" height="15"/>
                <textFieldExpression><![CDATA["Cliente: " + $P{REPORT_INVOICE_CUSTOMER}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="50" width="300" height="15"/>
                <text><![CDATA[Correo: cliente@correo.com]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="65" width="300" height="15"/>
                <text><![CDATA[Tel: 0000-0000]]></text>
            </staticText>


            <!-- Columna derecha: Empresa -->
            <staticText>
                <reportElement x="300" y="10" width="200" height="20"/>
                <textElement>
                    <font isBold="true" size="12"/>
                </textElement>
                <text><![CDATA[DATOS DE LA EMPRESA]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="35" width="250" height="15"/>
                <text><![CDATA[Glowshop]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="50" width="250" height="15"/>
                <text><![CDATA[Email: contacto@glowshop.com]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="65" width="200" height="15"/>
                <text><![CDATA[Tel: 2222-5262]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="80" width="350" height="15"/>
                <text><![CDATA[Dirección: 93 Av. Norte, 4814, San Salvador, El Salvador]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="110" width="572" height="1"/>
            </line>

        </band>
    </pageHeader>


    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="572" height="30" forecolor="#000000" backcolor="#f2f2f2" mode="Opaque"/>
            </rectangle>

            <staticText>
                <reportElement x="10" y="5" width="200" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Detalle]]></text>
            </staticText>

            <staticText>
                <reportElement x="220" y="5" width="80" height="20"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Cant.]]></text>
            </staticText>

            <staticText>
                <reportElement x="310" y="5" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Precio]]></text>
            </staticText>

            <staticText>
                <reportElement x="420" y="5" width="140" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Subtotal]]></text>
            </staticText>
        </band>
    </columnHeader>


    <detail>
        <band height="25">

            <textField>
                <reportElement x="10" y="2" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{productId}.getName()]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="220" y="2" width="80" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>

            <textField pattern="$ #,##0.00">
                <reportElement x="310" y="2" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{unitPrice}]]></textFieldExpression>
            </textField>

            <textField pattern="$ #,##0.00">
                <reportElement x="420" y="2" width="140" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{subtotal}]]></textFieldExpression>
            </textField>

        </band>
    </detail>


    <!-- Totales estilo factura -->
    <summary>
        <band height="120">

            <line>
                <reportElement x="0" y="0" width="572" height="1"/>
            </line>

            <staticText>
                <reportElement x="330" y="20" width="100" height="25"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL:]]></text>
            </staticText>

            <textField pattern="$ #,##0.00">
                <reportElement x="430" y="20" width="140" height="25"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{REPORT_TOTAL}]]></textFieldExpression>
            </textField>

            <!-- Caja de información de pago -->
            <rectangle>
                <reportElement x="0" y="60" width="300" height="50" mode="Opaque" backcolor="#f2f2f2"/>
            </rectangle>

            <staticText>
                <reportElement x="10" y="65" width="280" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[INFORMACIÓN DE PAGO]]></text>
            </staticText>

            <staticText>
                <reportElement x="10" y="80" width="280" height="15"/>
                <text><![CDATA[Transferencia bancaria]]></text>
            </staticText>

            <staticText>
                <reportElement x="10" y="95" width="280" height="15"/>
                <text><![CDATA[Número de cuenta: 0000000000]]></text>
            </staticText>

        </band>
    </summary>

</jasperReport>
